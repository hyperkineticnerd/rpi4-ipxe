iseq ${net0/ip} 172.16.1.11 && set CONFIGURL http://172.16.100.11/coreos/hosts/rpi1/main.ign ||
iseq ${net0/ip} 172.16.1.12 && set CONFIGURL http://172.16.100.11/coreos/hosts/rpi2/main.ign ||
iseq ${net0/ip} 172.16.1.13 && set CONFIGURL http://172.16.100.11/coreos/hosts/rpi3/main.ign ||
iseq ${net0/ip} 172.16.1.14 && set CONFIGURL http://172.16.100.11/coreos/hosts/rpi4/main.ign ||
iseq ${net0/ip} 172.16.1.15 && set CONFIGURL http://172.16.100.11/coreos/hosts/rpi5/main.ign ||
iseq ${net0/ip} 172.16.1.16 && set CONFIGURL http://172.16.100.11/coreos/hosts/rpi6/main.ign ||
iseq ${net0/ip} 172.16.1.17 && set CONFIGURL http://172.16.100.11/coreos/hosts/rpi7/main.ign ||
